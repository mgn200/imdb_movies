!!! 5
%html{:lang => 'en'}
  %head
    %meta{"charset" => "utf-8"}/
    %meta{"name" => "viewport", :content => "width=device-width, initial-scale=1"}/
    %meta{"name" => "description", "content" => ""}/

    / Bootstrap Core CSS
    %link{:href => "css/bootstrap.min.css", :rel => :stylesheet}/

  %body
    .container
      - @movies_row.each do |row|
        .row
          - row.each do |movie|
            .col-sm-6
              .card{style: "width: 30rem;"}
                .img{class: "card-img-top", src: "#", alt: "Poster image"}
                .card-body
                  %h4{class: "card-title"}
                    =movie.title
                  %h6{class: "card-subtitle mb-2 text-muted"}
                    =movie.country + ", "
                    =movie.year

                  %p{class: "card-text"}
                    %strong= movie.director
                  %p{class: "card-text"}
                    =movie.genre.join(', ')
                  %p{class: "card-text"}
                    Starring:
                    =movie.actors.join(', ')


    / Bootstrap Core JavaScript
    / =================================================================================
    / Placed at the end of the document so that pages can load faster.
    %script{:src => "js/bootstrap.min.js"}
