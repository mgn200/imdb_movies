# Set up needed folders: data/imdb_pages and data/views
require 'slop'
#require 'pry'
require "fileutils"


  config_sample_file = File.join(File.dirname(File.expand_path("../", __FILE__)), '/config.yml.sample')
  File.write('config.yml', File.read(config_sample_file))
=begin

def create_data_dirs
  FileUtils::mkdir_p('data/imdb_pages') unless Dir.exist?('data/imdb_pages')
  FileUtils::mkdir_p('data/views') unless Dir.exist?('data/views')
end

def create_movies_file
  file = File.join(File.dirname(File.expand_path("../", __FILE__)), 'data/movies.txt')
  File.write('movies.txt', File.read(file))
end

opts = Slop.parse do |o|
  o.on 'netflix' do
    o.on '--pay' do
      puts 'hi'
    end
  end

  o.on '--setup', 'setups folders and config.yml' do
   create_config
   create_data_dirs
   create_movies_file
  end
end

# Create sample config with empty API key, user need to put there his own key.
# Make movies.txt
=end

